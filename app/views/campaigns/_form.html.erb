<%= simple_form_for @campaign do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :goal, as: :string %>
  <%= f.input :end_date %>
  <h2>Rewards</h2>
  <%= f.error :rewards %>
  <%= f.simple_fields_for :rewards do |r| %>
    <%= r.input :body %>
    <%= r.input :amount, as: :string %>
    <%= r.input :_destroy, as: :boolean %>
  <% end %>
  <%= f.submit %>
<% end %>
